<form class="theater-form" action="/products/edit/{{product._id}}" method="POST">
    <h1>Edit Theater</h1>
    <div>
        <label for="title">Theater Title:</label>
        <input type="text" placeholder="Theater name" name="title" value="{{product.title}}">
    </div>
    <div>
        <label for="description">Theater Description:</label>
        <textarea placeholder="Description" name="description">{{product.description}}</textarea>
    </div>
    <div>
        <label for="imageUrl">Image url:</label>
        <input type="text" placeholder="Image Url" name="imageUrl" value="{{product.imageUrl}}">
    </div>
    <div class="check">
        {{!-- <input type="checkbox" id="check-box" {{#if checked}}checked{{/if}} /> --}}
        <input type="checkbox" id="check-box" name= "isPublic"/>

        <label for="check-box">Public</label>
    </div>
    <button class="btn" type="submit">Submit</button>
</form>